<%= render "shared/header" %>
<div class = "mypage_wrapper">
  <div class = "mypage_top">
<!--     <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %> -->
    <div class = "mypage_top__user_icon">
      <%= image_tag current_user.avatar, :size => "250x250", :alt => "user" %>
      <a class = "user_nickname"><%= @user.nickname %></a>
      <a class = "user_userid">ID: 100ac438</a>
    </div>
    <div class = "mypage_top__user_menu">
      <div class = "user_menu_wrapper user_data" >
        <p class = "menu_title">DATA</p>
        <div class = "follow">
          <a>フォロワー数&nbsp;:&nbsp;100人</a>&nbsp;&nbsp;&nbsp;&nbsp;<a>フォロー数&nbsp;:&nbsp;150人</a>
        </div>
        <div class = "post">
          <a>投稿数&nbsp;:&nbsp;10件</a>
