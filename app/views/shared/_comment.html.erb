<div class = "comment_wrapper">
  <div class = "comment_wrapper__left">
    <%= image_tag comment.user.avatar, size: "50x50", alt: "avatar" %>
    <%= link_to comment.user.nickname, "/users/#{comment.user.id}" %>
    <p class = "posted_date">
      <%= comment.created_at.strftime("%Y/%m/%d") %>
    </p>
  </div>
  <div class = "comment_wrapper__right" id = <%="comment_#{comment.id}" %>>
    <p class = "comment_text"><%= "#{comment.comment}" %></p>
    <% if user_signed_in? && current_user.id == comment.user_id %>
      <%= link_to "", "/posts/#{comment.post_id}/comments/#{comment.id}/edit", class: 'comment_edit_btn fas fa-cog' %>
    <% end %>
  </div>
</div>
